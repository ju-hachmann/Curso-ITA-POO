
public class VerificadoraNotas {

	public static int mediaAluno(Aluno aluno) {
		int total = 0;
		total += aluno.bim1;
		total += aluno.bim2;
		total += aluno.bim3;
		total += aluno.bim4;
		
		return total/4;
	}
	
	public static boolean passou(Aluno aluno) {
		int media = mediaAluno(aluno);
		if (media >= 60) {
			return true;
		}
		return false;
	}
	
}
